{
 "Description": "Cross Region DR Role to create/Copy/Restore DB Snapshots",
 "AWSTemplateFormatVersion": "2010-09-09",
 "Parameters": {
  "Env": {
   "Type": "String",
   "Default": "",
   "Description": "String to enable multiple deployments per AWS region"
  },
  "SourceRegion": {
   "Type": "String",
   "Default": "us-east-1",
   "Description": "Enter the Primary Region"
  },
  "TargetRegion": {
   "Type": "String",
   "Default": "us-west-2",
   "Description": "Enter the Standby Region"
  },
  "GlobalClusterIdentifier": {
   "Type": "String",
   "Default": "global-db-cluster"
  },
  "KmsKey": {
   "Type": "String"
  },
  "BootstrapVersion": {
   "Type": "AWS::SSM::Parameter::Value<String>",
   "Default": "/cdk-bootstrap/hnb659fds/version",
   "Description": "Version of the CDK Bootstrap resources in this environment, automatically retrieved from SSM Parameter Store. [cdk:skip]"
  }
 },
 "Resources": {
  "CrossRegionSnapshotCopySSMAutomationRole": {
   "Type": "AWS::IAM::Role",
   "Properties": {
    "AssumeRolePolicyDocument": {
     "Version": "2012-10-17",
     "Statement": [
      {
       "Action": [
        "sts:AssumeRole"
       ],
       "Effect": "Allow",
       "Principal": {
        "Service": [
         "ssm.amazonaws.com"
        ]
       }
      }
     ]
    },
    "Path": "/",
    "Policies": [
     {
      "PolicyDocument": {
       "Version": "2012-10-17",
       "Statement": [
        {
         "Effect": "Allow",
         "Action": [
          "rds:*"
         ],
         "Resource": [
          {
           "Fn::Sub": "{{resolve:secretsmanager:mr-app/orders-${SourceRegion}-${GlobalClusterIdentifier}${Env}}}"
          },
          {
           "Fn::Join": [
            ":",
            [
             "arn:aws:rds",
             {
              "Ref": "SourceRegion"
             },
             {
              "Ref": "AWS::AccountId"
             },
             "cluster-snapshot",
             "rds",
             "unplanned-global-failover-orders-dbcluster-01-us-east-1-*"
            ]
           ]
          },
          {
           "Fn::Join": [
            ":",
            [
             "arn:aws:rds",
             {
              "Ref": "TargetRegion"
             },
             {
              "Ref": "AWS::AccountId"
             },
             "cluster-snapshot",
             "unplanned-global-failover-orders-dbcluster-01-us-east-1-*"
            ]
           ]
          },
          {
           "Fn::Join": [
            ":",
            [
             "arn:aws:rds",
             {
              "Ref": "TargetRegion"
             },
             {
              "Ref": "AWS::AccountId"
             },
             "cluster",
             "orders-recon-dbcluster-*"
            ]
           ]
          },
          {
           "Fn::Join": [
            ":",
            [
             "arn:aws:rds",
             {
              "Ref": "TargetRegion"
             },
             {
              "Ref": "AWS::AccountId"
             },
             "db",
             "orders-recon-dbinstance-*"
            ]
           ]
          },
          {
           "Fn::Join": [
            ":",
            [
             "arn:aws:rds",
             {
              "Ref": "TargetRegion"
             },
             {
              "Ref": "AWS::AccountId"
             },
             "subgrp",
             "orders-recon-dbcluster-subnet-group"
            ]
           ]
          }
         ]
        },
        {
         "Effect": "Allow",
         "Action": [
          "rds:DescribeDBClusterSnapshots"
         ],
         "Resource": [
          "*"
         ]
        },
        {
         "Effect": "Allow",
         "Action": [
          "kms:DescribeKey",
          "kms:CreateGrant"
         ],
         "Resource": [
          {
           "Fn::Sub": "{{resolve:secretsmanager:mr-app/orders-${GlobalClusterIdentifier}-StorageEncryptionKeyArn${Env}}}"
          },
          {
           "Fn::Sub": "{{resolve:secretsmanager:mr-app/orders-${TargetRegion}-${GlobalClusterIdentifier}-Snapshot-KeyArn${Env}}}"
          }
         ]
        },
        {
         "Effect": "Allow",
         "Action": [
          "lambda:InvokeAsync",
          "lambda:InvokeFunction"
         ],
         "Resource": [
          "*"
         ]
        }
       ]
      },
      "PolicyName": {
       "Fn::Join": [
        "-",
        [
         "CRDR-SSMPolicy",
         {
          "Ref": "SourceRegion"
         },
         {
          "Fn::Select": [
           0,
           {
            "Fn::Split": [
             "-",
             {
              "Fn::Select": [
               2,
               {
                "Fn::Split": [
                 "/",
                 {
                  "Ref": "AWS::StackId"
                 }
                ]
               }
              ]
             }
            ]
           }
          ]
         }
        ]
       ]
      }
     }
    ],
    "RoleName": {
     "Fn::Join": [
      "-",
      [
       "CRDR-SSMRole",
       {
        "Fn::Select": [
         0,
         {
          "Fn::Split": [
           "-",
           {
            "Fn::Select": [
             2,
             {
              "Fn::Split": [
               "/",
               {
                "Ref": "AWS::StackId"
               }
              ]
             }
            ]
           }
          ]
         }
        ]
       }
      ]
     ]
    }
   }
  },
  "CrossRegionSnapshotCopySSMAutomationRoleArn": {
   "Type": "AWS::SecretsManager::Secret",
   "Properties": {
    "Description": "Arn for CrossRegionSnapshotCopySSMAutomationRole",
    "KmsKeyId": {
     "Ref": "KmsKey"
    },
    "Name": {
     "Fn::Sub": "mr-app/CRDRSSMAutomationRoleArn${Env}"
    },
    "ReplicaRegions": [
     {
      "Region": {
       "Fn::Sub": "${TargetRegion}"
      }
     }
    ],
    "SecretString": {
     "Fn::GetAtt": "CrossRegionSnapshotCopySSMAutomationRole.Arn"
    }
   }
  },
  "CDKMetadata": {
   "Type": "AWS::CDK::Metadata",
   "Properties": {
    "Analytics": "v2:deflate64:H4sIAAAAAAAA/yWOvQ6DMAyEn6V7SAF16M7UqRU8AHITUxnyg5ykHRDv3gSm+3Sy766VTXuT9QV+oVJ6qQy95TZEUItQxic9ebYQybuRnDJJo+wm9zhRZHwBg8WILHLCuBHYctB7gyKgYozBgoMPcrGHw9nL3zPFNcVCPQafWB1pnXeaStsunM9dc7h+m7us88A5EFWcXCSLsj/1D22OWW+9AAAA"
   },
   "Metadata": {
    "aws:cdk:path": "CdkNagScanStack/CDKMetadata/Default"
   },
   "Condition": "CDKMetadataAvailable"
  }
 },
 "Outputs": {
  "SSMAutomationRole": {
   "Value": {
    "Ref": "CrossRegionSnapshotCopySSMAutomationRole"
   }
  }
 },
 "Conditions": {
  "CDKMetadataAvailable": {
   "Fn::Or": [
    {
     "Fn::Or": [
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "af-south-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "ap-east-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "ap-northeast-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "ap-northeast-2"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "ap-south-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "ap-southeast-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "ap-southeast-2"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "ca-central-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "cn-north-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "cn-northwest-1"
       ]
      }
     ]
    },
    {
     "Fn::Or": [
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "eu-central-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "eu-north-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "eu-south-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "eu-west-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "eu-west-2"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "eu-west-3"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "il-central-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "me-central-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "me-south-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "sa-east-1"
       ]
      }
     ]
    },
    {
     "Fn::Or": [
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "us-east-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "us-east-2"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "us-west-1"
       ]
      },
      {
       "Fn::Equals": [
        {
         "Ref": "AWS::Region"
        },
        "us-west-2"
       ]
      }
     ]
    }
   ]
  }
 },
 "Rules": {
  "CheckBootstrapVersion": {
   "Assertions": [
    {
     "Assert": {
      "Fn::Not": [
       {
        "Fn::Contains": [
         [
          "1",
          "2",
          "3",
          "4",
          "5"
         ],
         {
          "Ref": "BootstrapVersion"
         }
        ]
       }
      ]
     },
     "AssertDescription": "CDK bootstrap stack version 6 required. Please run 'cdk bootstrap' with a recent version of the CDK CLI."
    }
   ]
  }
 }
}