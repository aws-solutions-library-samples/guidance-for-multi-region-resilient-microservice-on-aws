{
 "Description": "(SO9169) Global Resources Stack",
 "Transform": [
  "AWS::LanguageExtensions"
 ],
 "AWSTemplateFormatVersion": "2010-09-09",
 "Parameters": {
  "NamingPrefix": {
   "Type": "String",
   "Description": "Enter the Naming Prefix for resources created"
  },
  "Env": {
   "Type": "String",
   "Default": "",
   "Description": "String to enable multiple deployments per AWS region"
  },
  "PrimaryRegion": {
   "Type": "String",
   "Default": "us-east-1",
   "Description": "Enter the Primary Region"
  },
  "SecondaryRegion": {
   "Type": "String",
   "Default": "us-west-2",
   "Description": "Enter the Secondary Region"
  },
  "KmsKey": {
   "Type": "AWS::SSM::Parameter::Value<String>",
   "Default": "KmsKey",
   "Description": "CMK Id"
  },
  "BootstrapVersion": {
   "Type": "AWS::SSM::Parameter::Value<String>",
   "Default": "/cdk-bootstrap/hnb659fds/version",
   "Description": "Version of the CDK Bootstrap resources in this environment, automatically retrieved from SSM Parameter Store. [cdk:skip]"
  }
 },
 "Resources": {
  "DDBGlobalTable": {
   "Type": "AWS::DynamoDB::GlobalTable",
   "Properties": {
    "AttributeDefinitions": [
     {
      "AttributeName": "customerId",
      "AttributeType": "S"
     },
     {
      "AttributeName": "id",
      "AttributeType": "S"
     }
    ],
    "BillingMode": "PAY_PER_REQUEST",
    "GlobalSecondaryIndexes": [
     {
      "IndexName": "idx_global_customerId",
      "KeySchema": [
       {
        "AttributeName": "customerId",
        "KeyType": "HASH"
       }
      ],
      "Projection": {
       "ProjectionType": "ALL"
      }
     }
    ],
    "KeySchema": [
     {
      "AttributeName": "id",
      "KeyType": "HASH"
     }
    ],
    "Replicas": [
     {
      "PointInTimeRecoverySpecification": {
       "PointInTimeRecoveryEnabled": true
      },
      "Region": {
       "Ref": "PrimaryRegion"
      }
     },
     {
      "PointInTimeRecoverySpecification": {
       "PointInTimeRecoveryEnabled": true
      },
      "Region": {
       "Ref": "SecondaryRegion"
      }
     }
    ],
    "SSESpecification": {
     "SSEEnabled": true
    },
    "StreamSpecification": {
     "StreamViewType": "NEW_AND_OLD_IMAGES"
    },
    "TableName": {
     "Fn::Sub": "${NamingPrefix}Table${Env}"
    }
   }
  },
  "DDBGlobalTableSecret": {
   "Type": "AWS::SecretsManager::Secret",
   "Properties": {
    "Description": "DDB Global Table",
    "KmsKeyId": {
     "Ref": "KmsKey"
    },
    "Name": {
     "Fn::Sub": "${NamingPrefix}Table${Env}Secret"
    },
    "ReplicaRegions": [
     {
      "Region": {
       "Ref": "SecondaryRegion"
      }
     }
    ],
    "SecretString": {
     "Ref": "DDBGlobalTable"
    }
   }
  },
  "CDKMetadata": {
   "Type": "AWS::CDK::Metadata",
   "Properties": {
    "Analytics": "v2:deflate64:H4sIAAAAAAAA/yWOzQ6CMBCEn8V7qUA8eOdgvBnxTrbtYgrtbtIfjSG8uwVOM9nZfDOtbNqLrE/wjZU2c+WskkufQM9CO85m5OAhWabBknbZoOxGuh9WFPuAAB4TBlEIw2J+BJ6N2r5ujhW4FyiHIqIOmKIHgjeGLe33y7oxnhg5B73zOiZjt75VEJe2KZ4/zVXWZeIUra1CpmQ9yuehf03Udzy/AAAA"
